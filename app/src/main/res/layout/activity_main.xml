<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1219"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1E2B3C"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统白名单管理"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- 主内容区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 白名单输入卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#252A3A"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="当前白名单"
                    android:textColor="#5DADE2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03" />

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/edit_tv_bg"
                    android:gravity="top"
                    android:hint="com.example.app1, com.example.app2"
                    android:padding="12dp"
                    android:textColor="#ECF0F1"
                    android:textColorHint="#5D6D7E"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:nextFocusDown="@id/save"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

            <!-- 保存按钮 -->
            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_tv_bg"
                android:onClick="Ok"
                android:text="保存白名单"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:stateListAnimator="@null"
                android:nextFocusUp="@id/edit1"
                android:nextFocusDown="@id/edit_package" />

            <!-- 添加应用行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#1E2B3C"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/edit_package"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_tv_bg"
                    android:hint="输入包名"
                    android:paddingHorizontal="12dp"
                    android:textColor="#ECF0F1"
                    android:textColorHint="#5D6D7E"
                    android:textSize="14sp"
                    android:nextFocusUp="@id/save"
                    android:nextFocusRight="@id/btn_select_app"
                    android:nextFocusDown="@id/btn_add" />

                <Button
                    android:id="@+id/btn_select_app"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/btn_tv_bg"
                    android:paddingHorizontal="18dp"
                    android:text="选择应用"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:stateListAnimator="@null"
                    android:nextFocusLeft="@id/edit_package"
                    android:nextFocusDown="@id/btn_add" />
            </LinearLayout>

            <!-- 操作按钮组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_tv_bg"
                    android:text="添加"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:stateListAnimator="@null"
                    android:nextFocusUp="@id/edit_package"
                    android:nextFocusRight="@id/btn_delete"
                    android:nextFocusDown="@id/btn_copy_from_macket" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_tv_bg"
                    android:text="删除"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:stateListAnimator="@null"
                    android:nextFocusLeft="@id/btn_add"
                    android:nextFocusRight="@id/btn_copy_from_macket"
                    android:nextFocusDown="@id/btn_copy_from_macket" />

                <Button
                    android:id="@+id/btn_copy_from_macket"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_tv_bg"
                    android:text="从系统导入"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:stateListAnimator="@null"
                    android:nextFocusLeft="@id/btn_delete"
                    android:nextFocusUp="@id/btn_add"
                    android:nextFocusDown="@id/edit1" />
            </LinearLayout>

            <!-- 关于信息 - 带分隔线效果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E2B3C"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A4A5A" />

                <TextView
                    android:id="@+id/about_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/about"
                    android:textColor="#95A5A6"
                    android:textSize="13sp"
                    android:lineSpacingExtra="3dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A4A5A" />

            </LinearLayout>

            <!-- 极简版本号 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="v1.0 · 星辉工作室"
                android:textColor="#5D6D7E"
                android:textSize="11sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>